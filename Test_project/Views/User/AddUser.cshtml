@model Test_project.Models.UserDTO

@{
    ViewData["Title"] = "AddUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
          @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h1 class="text-white text-center fw-bold text-decoration-underline link-underline-info">Add User</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddUser" class="bg-dark text-white">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Email</label>
                <input asp-for="EmailId" id="email" class="form-control" />
                <span asp-validation-for="EmailId" id="email_validate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Mobile Number</label>
                <input asp-for="MobileNo" class="form-control" type="number"/>
                <span asp-validation-for="MobileNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Address</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Gender</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Gender" value="Male">
                    <label class="form-check-label">
                        Male
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Gender" value="Female">
                    <label class="form-check-label">
                        Female
                    </label>
                </div>

                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">State</label>
                <Select asp-for="State" class="form-select" asp-items="ViewBag.States">
                    <option value="">--Select State--</option>
                </Select>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hobbies" class="control-label"></label>
                 <select asp-for="Hobbies" class="form-control selectpicker" multiple id="sub_dropdown">
                    <option disabled value="">--Select Hobbies--</option>
                    <option value="Reading">Reading</option>
                    <option value="Traveling">Traveling</option>
                    <option value="Cooking">Cooking</option>
                    <option value="Sports">Sports</option>
                    <option value="Gaming">Gaming</option>
                    <option value="Photography">Photogrophy</option>
                </select> 
                <span asp-validation-for="Hobbies" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="mt-4 btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="UserList">Back to List</a>
</div>
