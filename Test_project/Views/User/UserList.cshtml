@model IEnumerable<Test_project.Models.Users>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if(TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Success!</strong> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col col-md-12 col-lg-12">
        <div class="card border-3 bg-dark">
            <h1 class="text-center text-light text-decoration-underline mb-5 link-underline-info shadow">User List</h1>
            <table class="table table-dark text-center">
                <thead>
                    <tr>
                        <th>
                           Name
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Mobile Number
                        </th>
                        <th>
                            Address
                        </th>
                        <th>
                           Gender
                        <th>
                            States
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-info">
                           
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.MobileNo
                            </td>
                            <td>
                                @item.EmailId
                            </td>
                            <td>
                                @item.Address
                            </td>
                            <td>
                                @item.Gender
                            </td>
                            <td>
                                @item.State
                            </td>
                            <td>
                                <a  asp-action="UpdateUser" asp-route-id="@item.Id" class="btn btn-outline-success border-2 fw-semibold mx-3">Edit</a>

                                <a asp-action="UserDetails" asp-route-id="@item.Id" class="btn btn-outline-info me-3">Details</a>

                                    <a asp-action="DeleteUser" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this record?');" class="btn btn-outline-danger border-2 fw-semibold">Delete</a>
                                
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>